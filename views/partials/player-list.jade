          a(href="", ng-click="predicate='faceoffsLost'; reverse=!reverse").
            FOL
        th
          a(href="", ng-click="predicate='faceoffPercentage'; reverse=!reverse").
            FO %
        th
          a(href="", ng-click="predicate='penaltiesTaken'; reverse=!reverse").
            Pen
        th
          a(href="", ng-click="predicate='penaltiesDrawn'; reverse=!reverse").
            PenD
