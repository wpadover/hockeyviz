        th
          a(href="", ng-click="predicate='points'; reverse=!reverse").
            P
        th
          a(href="", ng-click="predicate='primaryAssists'; reverse=!reverse").
            A1
        th
          a(href="", ng-click="predicate='secondaryAssists'; reverse=!reverse").
